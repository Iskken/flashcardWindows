{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe", // Output executable in a bin directory
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\Deck.cpp",
                "${workspaceFolder}\\src\\CustomException.cpp",
                "${workspaceFolder}\\src\\DatabaseHandler.cpp",
                "/I${workspaceFolder}\\include", // Include path for headers
                "/I${workspaceFolder}\\lib",    // Include path for SQLite headers
                "/link",
                "/LIBPATH:${workspaceFolder}\\lib", // Library path for sqlite3.lib
                "sqlite3.lib",
                "/MACHINE:X64"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "C/C++: cl.exe build active file"
        }
    ]
}
